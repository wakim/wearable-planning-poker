<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" android:thickness="10dp">

            <corners android:radius="15.0dip" />
            <solid android:color="@color/card_background_pressed" />
            <stroke android:color="@color/card_border_pressed" android:width="@dimen/card_border"/>
        </shape>
    </item>
    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" android:thickness="10dp">

            <corners android:radius="15.0dip" />
            <solid android:color="@color/card_background" />
            <stroke android:color="@color/card_border" android:width="@dimen/card_border"/>
        </shape>
    </item>
</selector>
